    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "deep-equal-in-any-order": "^1.1.15",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.8.8",
    "sequelize-cli": "^6.2.0",
