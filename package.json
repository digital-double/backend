{
  "name": "backend",
  "version": "1.0.0",
  "description": "this is the backend server for digital double",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --trace-warnings app.js",
    "start": "node app.js",
    "setup:db": "sequelize db:drop && sequelize db:create && sequelize db:migrate && sequelize db:seed:all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-double/backend"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run format",
      "npm run lint"
    ]
  },
  "imports": {
    "#root/*.js": "./*.js",
    "#src/*.js": "./app/*.js",
    "#controllers/*.js": "./app/controllers/*.js"
  },
  "author": "Omar Badawy",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-session-sequelize": "^7.1.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.0",
    "fs": "^0.0.1-security",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.15",
    "nodemon": "^3.1.4",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sanitize": "^2.1.2",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
